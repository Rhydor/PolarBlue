<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".NewAlbumActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="background pattern"
        android:src="@drawable/bg"
        tools:ignore="MissingConstraints"
        />

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/newImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:backgroundTint="@color/transparent"
            android:drawableBottom="@drawable/newcover"
            tools:ignore="SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/editTextAlbumName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/alternativb"
            android:ems="10"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Nombre del Album"
            android:textColor="@color/secon_color"
            android:textSize="24sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextArtistName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/alternativb"
            android:ems="10"
            android:fontFamily="@font/ubuntu_light"
            android:hint="Artista"
            android:textColor="@color/secon_color"
            tools:ignore="TextContrastCheck" />


        <Button
            android:id="@+id/buttonAddSong"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/transparent"
            android:drawableLeft="@drawable/addalbum"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Agregar Album o EP"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <Button
            android:id="@+id/buttonSaveAlbum"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/alternativb"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Agregar Album"
            android:textAlignment="center"
            android:textColor="@color/secon_color"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>